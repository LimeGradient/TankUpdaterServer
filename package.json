  "bugs": {
    "url": "https://github.com/LimeGradient/TankUpdaterServer/issues"
  },
  "homepage": "https://github.com/LimeGradient/TankUpdaterServer#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "http-proxy": "^1.18.1",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/http-proxy": "^1.17.10",
    "@types/jszip": "^3.4.1",
    "@types/node": "^18.14.6",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "tanks-client/*"
    ]
  }
